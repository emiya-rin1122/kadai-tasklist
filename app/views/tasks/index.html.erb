<% if logged_in? %>

<h1>タスク一覧</h1>

<ul>

<% @tasks.each do |task| %>

<li>
<%= link_to task.id, task %>
:
<%= task.content %>
&gt
<%= task.status %>
</li>

<% end %>
    
</ul>
<%= paginate @tasks %>

<%= link_to '新規タスクの登録', new_task_path %>


<% else %>

<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the Microposts</h1>
    
<%= link_to '新規ユーザ登録', signup_path, class: 'btn btn-lg btn-primary' %>

  </div>
</div>

<% end %>
